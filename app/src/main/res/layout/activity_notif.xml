<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall11"
    tools:context="com.ils.androidfighterx.activity.ActivityNotif">
    <EditText
            android:id="@+id/txtNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textPersonName"
            android:text="INGRESE SU NOMBRE"
            android:textColor = "#262a26"
            android:background="#9effffff" />
        <Button
            android:id="@+id/btnNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTIFICAR"
            android:layout_toEndOf="@+id/txtNotif"
            android:layout_alignBottom="@+id/txtNotif" />
</LinearLayout>
